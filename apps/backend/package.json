{
  "name": "backend",
  "version": "0.1.0",
  "type": "CommmonJS",
  "private": true,
  "scripts": {
    "dev": "nodemon ./src/server.ts",
    "build": "tsc",
    "start": "node ./dist/src/server.js --env-file=./.env",
    "lint": "eslint --max-warnings 0",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "check-types": "next typegen && tsc --noEmit"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2"
  }
}
